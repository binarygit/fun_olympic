<%= form_with(model: post, class: 'form', html: { class: 'container form-floating form p-5' }) do |form| %>
  <% if post.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(post.errors.count, "error") %> prohibited this post from being saved:</h2>

      <ul>
        <% post.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class='field mb-3'>
    <%= form.label :title, style: "display: block", class: 'form-label' %>
    <%= form.text_field :title, class: 'form-control' %>
  </div>

  <div class='field mb-3'>
    <%= form.label :description, style: "display: block", class: 'form-label' %>
    <%= form.text_area :description, style: 'height: 103px;', class: 'form-control' %>
  </div>

  <div class='field mb-3'>
    <%= form.label :video, style: "display: block", class: 'form-label' %>
    <%= form.file_field :video, class: 'form-control' %>
  </div>

  <div class='field d-grid'>
    <%= form.submit 'Create Post', { class: 'btn btn-primary btn-lg'} %>
  </div>
<% end %>
