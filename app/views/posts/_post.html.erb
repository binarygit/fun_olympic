<% if params[:action] == 'index' %>
  <div id="<%= dom_id post %>">
    <a href="<%= post_url(post) %>">
      <%= image_tag url_for(post.thumbnail), size: "200x150" %>
      <br>
      <strong><%= post.title %></strong>
    </a>
  </div>

<% else %>

  <div id="<%= dom_id post %>">
    <p>
    <strong>Title:</strong>
    <%= post.title %>
    </p>

    <p>
    <strong>Description:</strong>
    <%= post.description %>
    </p>

    <p>
    <strong>Author:</strong>
    <%= post.user.email %>
    </p>

    <p>
    <strong>Video:</strong>
    <%= video_tag url_for(post.video), controls: true %>
    </p>

  </div>
<% end %>
